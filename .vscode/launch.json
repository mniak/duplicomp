    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sample Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/samples/server",
            "args": [
                "--port", "9001",
            ]
        },
        {
            "name": "Sample Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/samples/client",
            "args": [
                "--port", "9001",
            ]
        },
        {
            "name": "Gateway",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gateway",
            "args": [
                "--listen-address", ":9091",
                "--target", ":9001",
                "--shadow-target", ":9002",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Gateway (twice target 50053)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gateway",
            "args": [
                "--listen-address", ":50054",
                "--target", ":50053",
                "--shadow-target", ":50053",
            ],
            "console": "integratedTerminal"
        }
    ]
}